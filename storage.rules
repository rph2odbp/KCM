rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             request.auth.token.get(role, false) == true;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Photo uploads - restricted access
    match /photos/{photoId} {
      // Only authenticated staff can upload photos
      allow write: if hasRole('staff') || hasRole('admin');
      
      // Photos can be read based on permissions stored in Firestore
      // This is a simplified rule - actual permissions should be checked against Firestore
      allow read: if hasRole('staff') || hasRole('admin') || hasRole('guardian');
    }

  // Medical documents - highly restricted
  // Path: medical/{guardianId}/{camperId}/{filename}
    function isParentOf(camperId) {
      return isAuthenticated() &&
        get(/databases/(default)/documents/campers/$(camperId)).data.parentId == request.auth.uid;
    }
    match /medical/{guardianId}/{camperId}/{document} {
      // Parent of camper can upload/read their own child's docs (e.g., insurance card)
      allow read, write: if isAuthenticated() && guardianId == request.auth.uid && isParentOf(camperId);
      // Medics and admins can access for care
      allow read: if hasRole('medic') || hasRole('admin');
    }

    // User profile images
    match /profiles/{userId}/{document} {
      allow read, write: if isOwner(userId) || hasRole('admin');
    }

    // General documents
    match /documents/{camperId}/{document} {
      allow read: if hasRole('staff') || hasRole('admin');
      allow write: if hasRole('admin');
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

