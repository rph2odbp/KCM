{
  "firestore": {
    "databases": {
      "kcm-db": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
      }
    }
  },
  "functions": [
    {
      "source": "kateri-monorepo/packages/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
  "corepack yarn --cwd kateri-monorepo workspace @kateri/functions build"
      ]
    },
    {
      "source": "kateri-monorepo/packages/functions-gen2",
      "codebase": "gen2",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
    "corepack yarn --cwd kateri-monorepo workspace @kateri/functions-gen2 build"
      ]
    }
  ],
  "hosting": {
    "public": "kateri-monorepo/packages/web/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
  "rewrites": [{ "source": "**", "destination": "/index.html" }],
  "predeploy": ["corepack yarn --cwd kateri-monorepo workspace @kateri/web build"]
  },
  "emulators": {
    "auth": {
      "port": 9100
    },
    "firestore": {
      "port": 8087
    },
    "functions": {
      "port": 5001
    },
    "storage": {
      "port": 9197
    },
    "ui": {
      "enabled": true,
      "port": 4040
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
