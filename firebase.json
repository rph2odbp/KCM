{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "kateri-monorepo/packages/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "yarn --cwd kateri-monorepo workspace @kateri/functions build"
      ]
    }
  ],
  "hosting": {
    "public": "kateri-monorepo/packages/web/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "**", "destination": "/index.html" }],
    "predeploy": ["yarn --cwd kateri-monorepo workspace @kateri/web build"]
  },
  "emulators": {
    "auth": {
      "port": 9000
    },
    "firestore": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "storage": {
      "port": 8085
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
