{
  "name": "@kateri/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "KCM (Kateri Camp Management) monorepo",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -v run build",
    "test": "yarn workspaces foreach -v run test",
    "lint": "yarn workspaces foreach -v run lint",
    "typecheck": "yarn workspaces foreach -v run typecheck",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "start": "concurrently \"yarn workspace:web dev\" \"yarn workspace:functions serve\"",
    "start:emulators": "firebase emulators:start --only firestore,auth,storage",
    "clean": "yarn workspaces foreach -v run clean",
    "workspace:shared": "yarn workspace @kateri/shared",
    "workspace:web": "yarn workspace @kateri/web",
    "workspace:functions": "yarn workspace @kateri/functions"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rph2odbp/KCM.git",
    "directory": "kateri-monorepo"
  },
  "license": "MIT",
  "author": "rph2odbp"
}
