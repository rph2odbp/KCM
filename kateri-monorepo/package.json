{
  "name": "@kateri/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "KCM (Kateri Camp Management) monorepo",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A -v run build",
    "test": "yarn workspaces foreach -A -v run test",
    "lint": "yarn workspaces foreach -A -v run lint",
    "deploy:rules": "yarn dlx firebase-tools deploy --only firestore:rules --project kcm-firebase-b7d6a",
    "rules:diff": "yarn dlx firebase-tools firestore:rules:dryrun --project kcm-firebase-b7d6a || echo 'Dry run complete'",
    "typecheck": "yarn workspaces foreach -A -v run typecheck",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "start": "concurrently \"yarn workspace:web dev\"",
    "emulators:kill-ports": "bash scripts/kill-ports.sh",
    "clean": "yarn workspaces foreach -A -v run clean",
    "workspace:shared": "yarn workspace @kateri/shared",
    "workspace:web": "yarn workspace @kateri/web",
    "workspace:functions": "yarn workspace @kateri/functions",
    "workspace:functions-gen2": "yarn workspace @kateri/functions-gen2",
    "deploy": "yarn dlx firebase-tools deploy --only functions,hosting --project kcm-firebase-b7d6a"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase-tools": "^13.29.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rph2odbp/KCM.git",
    "directory": "kateri-monorepo"
  },
  "license": "MIT",
  "author": "rph2odbp"
}
